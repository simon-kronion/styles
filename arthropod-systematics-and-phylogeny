  <info>
    <title>Arthropod Systematics and Phylogenetics</title>
    <id>http://www.zotero.org/styles/arthropod-systematics-and-phylogenetics</id>
    <link rel="self" href="http://www.zotero.org/styles/arthropod-systematics-and-phylogenetics"/>
    <link href="http://www.zotero.org/styles/zootaxa" rel="template"/>
    <link href="http://www.senckenberg.de/files/content/forschung/publikationen/arthropodsystematics/asp_instructions.pdf" rel="documentation"/>
    <author>
      <name>Simon Vitecek</name>
      <email>simon.vitecek@gmail.com</email>
    </author>
    <category citation-format="author-date"/>
    <category field="biology"/>
    <issn>1863-7221</issn>
    <eissn>1864-8312</eissn>
    <updated>2017-01-09T20:20:17+00:00</updated>
